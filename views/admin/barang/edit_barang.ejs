<!-- Modal -->
<div
  class="modal fade"
  id="edit-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Katgori</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
       <!-- form  --> 
     <form action="/admin/barang?_method=PUT" method="POST">
      <div class="modal-body">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="text"
              class="form-control name"
              name="name"
              aria-describedby="emailHelp"
              placeholder="Enter Name Barang"
              required
            />
          </div>
          
          <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="kategori">Kategori</label>
                    <select class="form-control" id="kategori" name="kategoriId">
                      <option class="kategori"></option>
                    <% kategori.map((data) => { %>
                        <option value="<%= data._id %>"><%= data.name %></option>
                    <% }) %>
                    </select>
              </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="subkategori">Subkategori</label>
                    <select class="form-control" id="subkategori" name="subkategoriId">
                      <option class="subkategori"></option>
                    <% subkategori.map((data) => { %>
                        <option value="<%= data._id %>"><%= data.name %></option>
                    <% }) %>
                    </select>
                </div>
            </div>
          </div>
          <div class="row">
           <div class="col-md-6">
                <div class="form-group">
                    <label for="subkategori">Lokasi</label>
                    <select class="form-control" id="lokasi" name="lokasiId">
                      <option class="lokasi"></option>
                    <% lokasi.map((data) => { %>
                        <option value="<%= data._id %>"><%= data.name %></option>
                    <% }) %>
                    </select>
                </div>
            </div>
          </div>        
        </div>
        <div class="modal-footer">
          <input type="hidden" class="id" name="id" id="id">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Simpan</button>
        </form>
         <!-- end form -->
      </div>
    </div>
  </div>
</div>
