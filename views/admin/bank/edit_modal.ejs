<!-- Modal -->
<div
  class="modal fade"
  id="edit-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Updata Bank</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
       <!-- form  --> 
      <form action="/admin/bank?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="modal-body">  
          <div class="form-group">
            <label for="nameBank">Name Bank</label>
            <input
              type="text"
              class="form-control nameBank"
              name="nameBank"
              aria-describedby="emailHelp"
              placeholder="Enter Name Bank"
              required
            />
          </div>
          <div class="form-group">
            <label for="nomorRekening">Nomor Rekening</label>
            <input
              type="text"
              class="form-control nomorRekening"
              name="nomorRekening"
              aria-describedby="emailHelp"
              placeholder="Enter Name Nomor Rekening"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="text"
              class="form-control name"
              name="name"
              aria-describedby="emailHelp"
              placeholder="Enter Name Nomor Rekening"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Image</label>
            <input
              type="file"
              class="form-control"
              name="image"
              aria-describedby="emailHelp"
              placeholder="Enter Name Nomor Rekening"
            />
            <span>Pilih gambar untuk update image</span>
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" class="id" name="id">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Update</button>
        </form>
         <!-- end form -->
      </div>
    </div>
  </div>
</div>
