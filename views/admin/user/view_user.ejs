<script>
    $(document).ready(function() {
        $('#tableBank').DataTable({})
    })
    $('#tableBank').on('click', '.button-edit', function() {
        let id = $(this).data('id')
        let username = $(this).data('username')
        let role = $(this).data('role')

        $('#edit-modal').modal('show')
        $('.id').val(id)
        $('.username').val(username)
        $('.role').val(role)
    })
</script>
