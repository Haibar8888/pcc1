<script>
    const label = [
        '2023-05-01',
        '2023-05-02',
        '2023-05-03',
        '2023-05-04',
        '2023-05-05',
    ]
    const dataPoint = [0, 0, 0, 2]
    // mongodb connection
    const data = {
        labels: label,
        datasets: [
            {
                label: 'Laporan Berdasarkan Tanggal',
                data: dataPoint,
                backgroundColor: [
                    'rgba(255, 26, 104, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(0, 0, 0, 0.2)',
                ],
                borderColor: [
                    'rgba(255, 26, 104, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(0, 0, 0, 1)',
                ],
                borderWidth: 1,
            },
        ],
    }

    // config
    const config = {
        type: 'bar',
        data,
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                },
            },
        },
    }

    // render init block
    const myChart = new Chart(document.getElementById('myChart'), config)
    function filterData() {
        const label1 = [...label]
        console.log(label1)
        const dataPoint1 = [...dataPoint]
        console.log(dataPoint1)
        const startDate = document.getElementById('startDate')
        const endtDate = document.getElementById('endDate')

        const indexStartDate = label1.indexOf(startDate.value)
        const indexEndtDate = label1.indexOf(endtDate.value)

        // slice
        const filterDate = label1.slice(indexStartDate, indexEndtDate + 1)
        myChart.config.data.labels = filterDate
        myChart.update()

        const dataPoint2 = [...data]
        const filterDataPoints = dataPoint2.slice(
            indexStartDate,
            indexEndtDate + 1
        )
        myChart.config.datasets[0].data = filterDataPoints
        myChart.update()
    }

    // Instantly assign Chart.js version
    const chartVersion = document.getElementById('chartVersion')
    chartVersion.innerText = Chart.version
</script>
